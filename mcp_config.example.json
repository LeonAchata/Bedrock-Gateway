{
  "mcpServers": {
    "llm-gateway-nova": {
      "command": "python",
      "args": ["-m", "src.server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ACCESS_KEY_ID": "your-access-key-id",
        "AWS_SECRET_ACCESS_KEY": "your-secret-access-key",
        "DEFAULT_MODEL": "nova-pro",
        "CACHE_ENABLED": "true",
        "METRICS_ENABLED": "true",
        "LOG_LEVEL": "INFO"
      }
    },
    "llm-gateway-claude": {
      "command": "python",
      "args": ["-m", "src.server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ACCESS_KEY_ID": "your-access-key-id",
        "AWS_SECRET_ACCESS_KEY": "your-secret-access-key",
        "DEFAULT_MODEL": "claude-3-5-sonnet",
        "CACHE_ENABLED": "true",
        "METRICS_ENABLED": "true",
        "LOG_LEVEL": "INFO"
      }
    },
    "llm-gateway-llama": {
      "command": "python",
      "args": ["-m", "src.server"],
      "env": {
        "AWS_REGION": "us-east-1",
        "AWS_ACCESS_KEY_ID": "your-access-key-id",
        "AWS_SECRET_ACCESS_KEY": "your-secret-access-key",
        "DEFAULT_MODEL": "llama-3-3-70b",
        "CACHE_ENABLED": "true",
        "METRICS_ENABLED": "true",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}


